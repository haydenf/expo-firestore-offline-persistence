{
  "name": "expo-firestore-offline-persistence",
  "version": "0.1.0",
  "description": "❄️ Enable Firestore offline persistence in Expo/React Native apps without detaching from Expo.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "!lib/typescript/example",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/nandorojo/expo-firestore-offline-persistence",
  "author": "Fernando Rojo <fernandorojo@hey.com> (https://twitter.com/fernandotherojo)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nandorojo/expo-firestore-offline-persistence/issues"
  },
  "homepage": "https://github.com/nandorojo/expo-firestore-offline-persistence#readme",
  "devDependencies": {
    "react": "*",
    "react-native": "*",
    "expo-sqlite": "11.1.1",
    "indexeddbshim": "8.0.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "expo-sqlite": "11.1.1",
    "indexeddbshim": "8.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false,
          "semi": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "semi": false
  }
}
